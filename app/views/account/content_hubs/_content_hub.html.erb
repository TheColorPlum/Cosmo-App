<% team = @team || @team %>
<% context ||= team %>
<% collection ||= :content_hubs %>
<% hide_actions ||= false %>
<% hide_back ||= false %>

<% with_attribute_settings object: content_hub do %>
  <tr data-id="<%= content_hub.id %>">
    <%= render "shared/tables/checkbox", object: content_hub %>
    <td><%= render 'shared/attributes/text', attribute: :title, url: [:account, content_hub] %></td>
    <%# ðŸš… super scaffolding will insert new fields above this line. %>
    <td><%= render 'shared/attributes/date_and_time', attribute: :created_at %></td>
    <td class="buttons">
      <% unless hide_actions %>
        <% if can? :edit, content_hub %>
          <%= link_to t('.buttons.shorthand.edit'), [:edit, :account, content_hub], class: 'button-secondary button-smaller' %>
        <% end %>
        <% if can? :destroy, content_hub %>
          <%= button_to t('.buttons.shorthand.destroy'), [:account, content_hub], method: :delete, data: { confirm: t('.buttons.confirmations.destroy', model_locales(content_hub)) }, class: 'button-secondary button-smaller' %>
        <% end %>
        <%# ðŸš… super scaffolding will insert new action model buttons above this line. %>
      <% end %>
    </td>
  </tr>
<% end %>
