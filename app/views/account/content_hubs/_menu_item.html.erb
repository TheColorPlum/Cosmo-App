<% if can? :read, ContentHub.new(team: current_team) %>
  <%= render 'account/shared/menu/item', {
    url: main_app.polymorphic_path([:account, current_team, :content_hubs]),
    label: t('content_hubs.navigation.label'),
  } do |p| %>
    <% p.content_for :icon do %>
      <i class="<%= t('content_hubs.navigation.icon') %>"></i>
    <% end %>
  <% end %>
<% end %>
